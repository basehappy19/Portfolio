generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Achievement {
  id             String  @id @default(cuid())
  title_th       String
  description_th String?
  awardLevel_th  String?
  location_th    String?

  title_en       String
  description_en String?
  awardLevel_en  String?
  location_en    String?

  receivedAt DateTime?
  sortOrder  Int                        @default(0)
  categories AchievementsOnCategories[]
  images     AchievementImage[]
  links      AchievementLink[]
  status     Status                     @default(DRAFT)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  DRAFT
  PUBLIC
}

model Category {
  id      Int    @id @default(autoincrement())
  name_th String
  name_en String
  slug    String @unique

  achievements AchievementsOnCategories[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AchievementsOnCategories {
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  achievementId String

  category   Category @relation(fields: [categoryId], references: [id])
  categoryId Int

  sortOrder Int @default(0)

  @@id([achievementId, categoryId])
}

model AchievementImage {
  id            String      @id @default(cuid())
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  achievementId String

  url        String
  altText_th String?
  altText_en String?
  sortOrder  Int     @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AchievementLink {
  id            String      @id @default(cuid())
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  achievementId String

  label_th String
  label_en String
  url      String

  sortOrder Int @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Message {
  id String @id @default(cuid())

  name    String
  email   String
  message String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
