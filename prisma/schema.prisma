generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Achievement {
  id          Int                  @id @default(autoincrement())
  title       String               
  description String?              
  awardLevel  String?              
  receivedAt  DateTime?            
  location    String?              

  categories  AchievementsOnCategories[]
  images      AchievementImage[]
  links       AchievementLink[]

  createdAt   DateTime             @default(now())
  updatedAt   DateTime             @updatedAt
}

model Category {
  id          Int                      @id @default(autoincrement())
  name        String                   
  slug        String                   @unique 

  achievements AchievementsOnCategories[]

  createdAt   DateTime                 @default(now())
  updatedAt   DateTime                 @updatedAt
}

model AchievementsOnCategories {
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  achievementId Int

  category      Category    @relation(fields: [categoryId], references: [id])
  categoryId    Int

  sortOrder     Int          @default(0)

  @@id([achievementId, categoryId])
}

model AchievementImage {
  id            Int          @id @default(autoincrement())
  achievement   Achievement  @relation(fields: [achievementId], references: [id])
  achievementId Int

  url           String       
  altText       String?      
  sortOrder     Int          @default(0)

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}

model AchievementLink {
  id            Int          @id @default(autoincrement())
  achievement   Achievement  @relation(fields: [achievementId], references: [id])
  achievementId Int

  label         String       
  url           String       

  sortOrder     Int          @default(0) 

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}